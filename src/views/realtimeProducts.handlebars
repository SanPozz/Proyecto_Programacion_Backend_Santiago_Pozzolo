<form class="form-container" id="form-add-product">
    <label for="title">Title:</label>
    <input type="text" name="title" required>
    
    <label for="description">Description:</label>
    <input type="text" name="description" required>

    <label for="price">Price:</label>
    <input type="number" name="price" class="input-price" required>

    <label for="code">Code:</label>
    <input type="text" name="code" required>

    <label for="stock">Stock:</label>
    <input type="number" name="stock" class="input-price" required>

    <label for="category">Category:</label>
    <input type="text" name="category" required>

    <button type="submit" id="submit-button">Sumbit</button>
</form>

<div class="products-container" id="products-container">

</div>